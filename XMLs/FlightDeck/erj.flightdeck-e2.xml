<!-- Knobs Pick Animations -->

<!-- CRS Knob 1 Pick Animation -->

	<animation>
		<type>pick</type>
		<object-name>CRS.knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step type="double">1</step>
				<max>360</max>
			</binding>
			<binding>
				<command>property-assign</command>
				<condition>
					<greater-than>
						<property>instrumentation/nav[0]/radials/selected-deg</property>
						<value>360</value>
					</greater-than>
				</condition>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<value>1</value>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step type="double">-1</step>
				<min>0</min>
			</binding>
			<binding>
				<command>property-assign</command>
				<condition>
					<less-than-equals>
						<property>instrumentation/nav[0]/radials/selected-deg</property>
						<value>0</value>
					</less-than-equals>
				</condition>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<value>360</value>
			</binding>
		</action>
	</animation>

